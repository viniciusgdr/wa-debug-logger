{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "ES2022",
      "esModuleInterop": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "strict": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "rootDirs": ["src", "tests"],
      "baseUrl": "src",
      "paths": {
        "@/tests/*": ["../tests/*"],
        "@/*": ["*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  